{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020", 
    "module": "commonjs",
    "outDir": "./dist/preload",
    "rootDir": "./src/preload",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "electron"]
  },
  "include": ["src/preload/**/*"],
  "exclude": ["node_modules", "dist"]
}
