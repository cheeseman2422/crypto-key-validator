{
  "name": "@crypto-validator/app-electron",
  "version": "1.0.0",
  "description": "Electron GUI for Cryptocurrency Key Validator",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "build": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "dev": "concurrently \"pnpm run dev:main\" \"pnpm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "start": "electron .",
    "electron": "electron .",
    "pack": "electron-builder --publish=never",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@crypto-validator/core-engine": "file:../core-engine",
    "bip32": "^5.0.0-rc.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.7",
    "bs58": "^5.0.0",
    "chokidar": "^3.6.0",
    "ecpair": "^3.0.0",
    "electron-store": "^10.1.0",
    "electron-util": "^0.18.1",
    "fs-extra": "^11.3.1",
    "keytar": "^7.9.0",
    "react": "^18.3.1",
    "react-dom": "^19.2.0-canary-fa3feba6-20250623",
    "tiny-secp256k1": "^2.2.4"
  },
  "devDependencies": {
    "@heroicons/react": "^2.2.0",
    "@types/node": "^20.19.13",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^37.4.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "prebuild-install": "^7.1.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^5.4.19"
  },
  "author": "cheeseman2422",
  "repository": {
    "type": "git",
    "url": "https://github.com/cheeseman2422/crypto-key-validator"
  }
}