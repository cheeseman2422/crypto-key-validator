{
  "name": "@crypto-validator/app-electron",
  "version": "1.0.0",
  "description": "Electron GUI for Cryptocurrency Key Validator",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "start": "electron .",
    "electron": "electron .",
    "pack": "electron-builder --publish=never",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@crypto-validator/core-engine": "workspace:*",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.5",
    "bip32": "^4.0.0",
    "ecpair": "^2.1.0",
    "tiny-secp256k1": "^2.2.3",
    "bs58": "^5.0.0",
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "keytar": "^7.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@heroicons/react": "^2.0.18",
    "@types/node": "^20.19.11",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.3.2",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2",
    "vite": "^5.0.4"
  },
  "build": {
    "appId": "com.forensics.crypto-key-validator",
    "productName": "Crypto Key Validator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
