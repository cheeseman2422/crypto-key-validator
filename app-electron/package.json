{
  "name": "@crypto-validator/app-electron",
  "version": "1.0.0",
  "description": "Electron GUI for Cryptocurrency Key Validator",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "start": "electron .",
    "electron": "electron .",
    "pack": "electron-builder --publish=never",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@crypto-validator/core-engine": "file:../core-engine",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.5",
    "bs58": "^5.0.0",
    "chokidar": "^3.5.3",
    "conf": "^14.0.0",
    "dot-prop": "^9.0.0",
    "ecpair": "^2.1.0",
    "electron-store": "^8.2.0",
    "electron-util": "^0.18.1",
    "env-paths": "^3.0.0",
    "fs-extra": "^11.3.1",
    "keytar": "^7.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "5.0.2",
    "tiny-secp256k1": "^2.2.3"
  },
  "devDependencies": {
    "@heroicons/react": "^2.0.18",
    "@types/node": "^20.19.11",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.3.2",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.32",
    "prebuild-install": "^7.1.3",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2",
    "vite": "^7.1.3"
  },
  "build": {
  "appId": "com.crypto-key-validator",
    "productName": "Crypto Key Validator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "icon": "assets/icon.png",
    "extraResources": [
      "assets/"
    ],
    "asar": true
  },
  "author": "cheeseman2422",
  "repository": {
    "type": "git",
    "url": "https://github.com/cheeseman2422/crypto-key-validator"
  }
}
