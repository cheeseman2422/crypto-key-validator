{
  "name": "crypto-key-validator",
  "version": "1.0.0",
  "description": "Offline Cryptocurrency Key Validator and Balance Checker",
  "private": true,
  "workspaces": [
    "app-electron",
    "core-engine"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "corepack pnpm run --parallel build",
    "build:appimage": "corepack pnpm build && electron-builder --linux AppImage",
    "build:deb": "pnpm build && electron-builder --linux deb",
    "build:rpm": "pnpm build && electron-builder --linux rpm",
    "build:snap": "pnpm build && electron-builder --linux snap",
    "build:linux": "pnpm build && electron-builder --linux",
    "dist": "pnpm build:linux",
    "build:production": "node scripts/build-production.js",
    "build:production:appimage": "node scripts/build-production.js appimage",
    "build:production:deb": "node scripts/build-production.js deb",
    "test": "pnpm run --parallel test",
    "lint": "eslint --ext .ts,.js .",
    "format": "prettier --write ."
  },
  "main": "app-electron/dist/main/main.js",
  "homepage": "https://github.com/yourusername/crypto-key-validator",
  "electronBuilder": {
    "appId": "com.forensics.crypto-key-validator",
    "productName": "Crypto Key Validator",
    "copyright": "Copyright Â© 2024 Forensics Team. All rights reserved.",
    "compression": "maximum",
    "directories": {
      "output": "dist-packages",
      "buildResources": "build-resources"
    },
    "files": [
      "app-electron/dist/**/*",
      "core-engine/dist/**/*",
      "node_modules/**/*",
      "app-electron/node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraMetadata": {
      "main": "app-electron/dist/main/main.js"
    },
    "linux": {
      "category": "Utility",
      "description": "Offline cryptocurrency key validator and forensics tool for Bitcoin analysis",
      "desktop": {
        "Name": "Crypto Key Validator",
        "Comment": "Validate Bitcoin keys, addresses, and seed phrases offline",
        "Categories": "Utility;Security;Development;",
        "Keywords": "bitcoin;cryptocurrency;forensics;validation;keys;wallet;recovery;"
      },
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        }
      ],
      "maintainer": "forensics-team@example.com",
      "vendor": "Forensics Team"
    },
    "snap": {
      "summary": "Offline Bitcoin key validator and forensics tool",
      "description": "Professional cryptocurrency validation tool for forensics and wallet recovery. Validates Bitcoin addresses, private keys, and seed phrases completely offline.",
      "grade": "stable",
      "confinement": "strict",
      "plugs": [
        "home",
        "removable-media",
        "desktop",
        "desktop-legacy"
      ]
    }
  },
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^20.19.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "electron": "^37.4.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/crypto-key-validator.git"
  },
  "keywords": [
    "cryptocurrency",
    "forensics",
    "private-keys",
    "wallet-recovery",
    "offline",
    "electron",
    "digital-forensics"
  ],
  "license": "MIT",
  "author": "Forensics Team",
  "dependencies": {
    "bip32": "5.0.0-rc.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.7",
    "bs58": "^5.0.0",
    "ecpair": "^3.0.0",
    "hdkey": "^2.1.0",
    "smart-buffer": "^4.2.0",
    "tiny-secp256k1": "^2.2.4"
  }
}